{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Linux",
            "command": "/usr/bin/clang",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/out/${fileBasenameNoExtension}.app",
                "-I",
                "${workspaceFolder}",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "/usr/bin/clang"
        }
    ],
    "version": "2.0.0"
}